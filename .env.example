# Server
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# OAuth/OIDC
OAUTH_ISSUER=http://localhost:8180
OAUTH_CLIENT_ID=bff
OAUTH_CLIENT_SECRET=your-secret-here
OAUTH_TOKEN_ENDPOINT=/api/v1/login
OAUTH_JWKS_URI=/.well-known/jwks.json
OAUTH_AUDIENCE=constrsw

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=1h

# Microservices - OAuth
OAUTH_INTERNAL_HOST=oauth
OAUTH_INTERNAL_API_PORT=8000
OAUTH_TIMEOUT=5000

# Microservices - Employees
EMPLOYEES_INTERNAL_HOST=employees
EMPLOYEES_INTERNAL_API_PORT=8080
EMPLOYEES_TIMEOUT=5000

# Microservices - Students
STUDENTS_INTERNAL_HOST=students
STUDENTS_INTERNAL_API_PORT=8080
STUDENTS_TIMEOUT=5000

# Microservices - Professors
PROFESSORS_INTERNAL_HOST=professors
PROFESSORS_INTERNAL_API_PORT=8082
PROFESSORS_TIMEOUT=5000

# Microservices - Courses
COURSES_INTERNAL_HOST=courses
COURSES_INTERNAL_API_PORT=8080
COURSES_TIMEOUT=5000

# Microservices - Classes
CLASSES_INTERNAL_HOST=classes
CLASSES_INTERNAL_API_PORT=8080
CLASSES_TIMEOUT=5000

# Microservices - Lessons
LESSONS_INTERNAL_HOST=lessons
LESSONS_INTERNAL_API_PORT=3000
LESSONS_TIMEOUT=5000

# Microservices - Reservations
RESERVATIONS_INTERNAL_HOST=reservations
RESERVATIONS_INTERNAL_API_PORT=8080
RESERVATIONS_TIMEOUT=5000

# Microservices - Resources
RESOURCES_INTERNAL_HOST=resources
RESOURCES_INTERNAL_API_PORT=3000
RESOURCES_TIMEOUT=5000

# Microservices - Rooms
ROOMS_INTERNAL_HOST=rooms
ROOMS_INTERNAL_API_PORT=3000
ROOMS_TIMEOUT=5000

# Cache
CACHE_TTL=300
CACHE_MAX=100

# Redis (optional)
REDIS_HOST=
REDIS_PORT=6379

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# HTTP
HTTP_TIMEOUT=5000

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Request Timeout
REQUEST_TIMEOUT=10000

# Swagger
ENABLE_SWAGGER=true

# OpenTelemetry
OTEL_SERVICE_NAME=bff
OTEL_SERVICE_VERSION=1.0.0
METRICS_PORT=9464

